FROM python:3.11-slim

WORKDIR /app

# Устанавливаем системные зависимости
RUN apt-get update && apt-get install -y \
    gcc \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Копируем requirements.txt
COPY requirements.txt .

# Устанавливаем Python зависимости
RUN pip install --no-cache-dir -r requirements.txt

# Копируем необходимые файлы для автоответчика
COPY smart_monitor_dms.py .
COPY smart_response_analyzer.py .
COPY chatgpt_response_generator.py .

# Создаем директории для сессий и логов
RUN mkdir -p /app/sessions /app/logs

# Создаем файлы, если их нет (будут перезаписаны volumes)
RUN touch /app/sent_responses.txt /app/blacklist.txt /app/dm_responses.txt

# Устанавливаем переменные окружения для Python
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app

# Команда по умолчанию
CMD ["python3", "-u", "smart_monitor_dms.py"]

